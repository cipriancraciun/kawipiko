		for _component in archiver server server-dummy wrapper ; do
			cp -T -- \
					"./.outputs/binaries/release/kawipiko-${_component}--${_platform}" \
					"./.outputs/publish/binaries/kawipiko-${_component}--${_platform}" \
			#
		done
	done
