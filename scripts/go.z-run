!!




<< go / build / server / debug
	test "${#}" -eq 0
	_outputs="$( exec -- readlink -e -- ./.outputs )"
	if test -e "${_outputs}/binaries/debug/kawipiko-server" ; then
		rm -- "${_outputs}/binaries/debug/kawipiko-server"
	fi
	exec -- \
		nodaemon \
		nice -n 19 \
	"${ZRUN[@]}" ':: go / tool' \
			build \
			-o "${_outputs}/binaries/debug/kawipiko-server" \
			-- ./cmd/server.go \
	#
!!


