	if test -e "${_outputs}/binaries/release/kawipiko-server" ; then
		rm -- "${_outputs}/binaries/release/kawipiko-server"
	fi
	_flags=(
			-tags netgo
		)
	if test -z "${__BUILD_QUICK:-}" ; then
		_flags+=(
				-gcflags 'all=-l=4'
				-ldflags 'all=-s'
				-buildmode exe
				-trimpath
				-a
			)
	fi
	exec -- \
		nodaemon \
		nice -n 19 -- \
	"${ZRUN[@]}" ':: go / tool' \
			build \
			"${_flags[@]}" \
			-o "${_outputs}/binaries/release/kawipiko-server" \
			-- ./cmd/server.go \
	#
